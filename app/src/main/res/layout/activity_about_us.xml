<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About_Us"
    android:background="@drawable/plain_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar_about_us"
        android:theme="@style/Theme.FashionStore.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_about_us"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_700"
            app:popupTheme="@style/Theme.FashionStore.PopupOverlay">

            <ImageView
                android:id="@+id/feedbackback"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/circleback"
                app:tint="@color/white"
                tools:visibility="visible" />>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/ourteamtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar_about_us"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-black"
        android:text="OUR TEAM"
        android:textColor="@color/purple_700"
        android:textSize="30sp" />
    <LinearLayout
        android:id="@+id/linearLayoutaboutus"
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ourteamtxt">

    </LinearLayout>
    <ListView
        android:id="@+id/list_view_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayoutaboutus"/>
</RelativeLayout>